[Unit]
Description=MQTT Logger Service
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/ubuntu/linux-admin-5
ExecStart=/home/ubuntu/linux-admin-5/run.sh
Restart=always
RestartSec=5
User=ubuntu
Environment="PATH=/home/ubuntu/linux-admin-5/venv/bin:/usr/bin:/bin"

[Install]
WantedBy=multi-user.target
